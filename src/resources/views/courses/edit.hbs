<div class="mt-4">
  {{course.level}}
  <h3>Update courses</h3>
  <form class="mt-4" method="POST" action="/courses/{{course._id}}/?_method=PUT">
    <div class="form-group">
      <label for="name">Name</label>
      <input name="name" value={{course.name}} type="text" class="form-control" id="name">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea name="description" class="form-control" id="description">{{course.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="videoId">VideoId</label>
      <input name="videoId" value={{course.videoId}} type="text" class="form-control" id="videoId">
    </div>
    <div class="form-group">
      <label for="level">Level</label>
      <input name="level" value={{course.level}} type="text" class="form-control" id="level">
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>