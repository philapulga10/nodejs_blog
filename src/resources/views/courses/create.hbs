<div class="mt-4">
  <h3>Đăng ký khoá học</h3>
  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name">Name</label>
      <input name="name" type="text" class="form-control" id="name">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <input name="description" type="text" class="form-control" id="description">
    </div>
    <div class="form-group">
      <label for="videoId">VideoId</label>
      <input name="videoId" type="text" class="form-control" id="videoId">
    </div>
    <div class="form-group">
      <label for="level">Level</label>
      <input name="level" type="name" class="form-control" id="level">
    </div>
    <button type="submit" class="btn btn-primary">Add course</button>
  </form>
</div>